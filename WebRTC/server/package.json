{
  "name": "webrtc-server",
  "version": "1.0.0",
  "author": "Zile GUO",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "tsc": "^1.20150623.0",
    "typescript": "^3.7.5",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "build": "tsc",
    "devServer": "nodemon --inspect src/index.ts"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modues"],
    "verbose": true,
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": ["src/"],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js, json, ts"
  }
}
